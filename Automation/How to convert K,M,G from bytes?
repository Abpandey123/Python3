def convert(byts):
    if byts < 1024:
        return str(byts) + 'B'
    elif 1e+6 > byts >= 1024:
        return str(round(byts/1024)) + 'K'
    elif  1e+9 > byts >= 1e+6:
        return str(round(byts/1e+6)) + 'M'
    elif byts >= 1e+9 :
        return str(round(byts/1e+9)) + 'G'
        
print(convert(1))
print(convert(1024))
print(convert(1024*1024))
print(convert(1024*1024*1024))
