size = [1e+3, 1e+6, 1e+9]

def convert(byts):
    if byts <= size[0]:
        return str(byts)+'B'
    elif size[0] <= byts <=  size[1]:
        return str(round(byts/size[0]))+'K'
    elif size[1] <= byts <=  size[2]:
        return str(round(byts/size[1]))+'M'
    elif byts >= size[2]:
        return str(round(byts/size[2]))+'G'
        
print(convert(8765564))
